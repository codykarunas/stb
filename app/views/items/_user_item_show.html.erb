<%#= USER %>
<%= render "layouts/flat_navbar" %>
<div class="global-wrapper">
  <div class="responsive-container">
    <div class="card">
      <div class="card-content">
        <% if !signed_in? %>
          <div id="notice">Sign in to add item to order</div>
          <hr />
        <% end %>
        <div class="columns">
          <div class="column is-one-quarter">
            <div class="item-image">
              <%= image_tag(@item.image.url, alt: "Image", class: "is-round") if @item.image? %>
            </div>
          </div>
          <div class="column is-two-thirds">
            <div class="item-name">
              <label class="label">
                <%= @item.name %>
              </label>
            </div>
            <div class="item-price">
              <%= number_to_currency(@item.price) %>
            </div>
            <% if signed_in? %>
              <%#= link_to "Add Item", "#", class: "button is-primary is-large" %><br /><br />
              <%#= link_to "Edit", edit_item_path, class: "button is-medium" %>
              <%#= link_to "Destroy", "#", class: "button is-medium" %>
            <% end %>
            <%= sanitize(@item.description) %><br />
          </div>
        </div>
