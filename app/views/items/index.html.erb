<%= render "layouts/navbar" %>

<div class="global-wrapper">
  <div class="responsive-container">
    <div class="container">
      <% if signed_in? %>
        <button class="button normal is-outlined user-notification">
          <%= fa_icon "user", class: "pull-left" %>
          Signed in as: <%= current_user.email %>
        </button>
      <% end %>
    </div>
    <br />
    <div class="grid">
      <% @items.each do |item| %>
        <div class="cell">
          <!-- card -->
          <div class="card">
            <div class="card-image">
              <figure>
                <%= link_to image_tag(item.image.url, alt: "Image"), item %><br />
                <%#= button_to "Add item", line_items_path(item_id: @item), class: 'button is-primary is-large add-to-cart' %>
              </figure>
            </div>

            <!-- card-content -->
            <%= link_to item do %>
              <div class="card-content">
                <div class="content">
                  <strong class="item-name"><%= item.name %></strong>
                  <br />
                  <strong class="item-name"><%= number_to_currency(item.price) %></strong>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
