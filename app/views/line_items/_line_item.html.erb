  <div class="columns">
    <div class="column s">
      <strong class="remove-item">
        <%= link_to "X", line_item, method: :delete, data: {confirm: "Are you sure?"}, class: "button is-large is-danger" %>
      </strong>
    </div>
    <div class="column is-one-third tmp-border">
      <figure class="is-128x128 image tmp-border">
        <%= image_tag(line_item.item.image_url(:thumb)) %>
      </figure>
      <strong>Amount: <%= line_item.quantity %></strong>
    </div>
    <div class="column is-three-fifths tmp-border">
      <strong><%= line_item.item.name %></strong>
      <p><%= truncate(line_item.item.description, length: 140) %></p>
    </div>

    <!-- <strong class="f4">
      <%#= number_to_currency(line_item.total_price) %>
      </strong> -->
  </div>
