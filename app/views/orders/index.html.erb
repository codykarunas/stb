<%= render "layouts/employees_nav" %>

<div class="orders-index-wrapper">
  <h1 class="title">Orders</h1>
  <table style="100%" class="orders-index">
    <tr class="orders-title-row">
      <td>Order No.</td>
      <td>User No.</td>
      <!-- <td>Subtotal</td> -->
      <!-- <td>Tax</td> -->
      <!-- <td>Total</td> -->
      <td>Created At</td>
      <!-- <td>Updated At</td> -->
      <td>Status</td>
      <td>Order Items</td>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <!-- <td><%#= link_to order.id, employee_order_path(order) %></td> -->
        <td><%= order.id %></td>
        <td><%= order.user_id %></td>
        <!-- <td><%#= number_to_currency(order.subtotal) %></td> -->
        <!-- <td><%#= number_to_currency(order.tax) %></td> -->
        <!-- <td><%#= number_to_currency(order.total) %></td> -->
        <!-- <td><%#= time_ago_in_words(order.updated_at) %></td> -->
        <td><%= time_ago_in_words(order.created_at) %></td>
        <td>
          <%# Temporary! %>
          <select name="item[item_type]" id="item_type">
            <option value="1" selected>Pending</option>
            <option value="2">Completed</option>
          </select>
          <%#= "pending" %>
          <%#= order.status %>
        </td>
        <td>
          <% order.order_items.each do |order_item| %>
            <% order_item.cart.line_items.each do |line_item| %>
              <li><strong><%= line_item.name %></strong></li>
            <% end %>
          <% end %>
        </td>
      </tr>
      <%#= order.employee_cart_id %>
      <%#= order.cart_id %>
    <% end %>
  </table>
</div>

<%#= render "layouts/employees_bottom_nav" %>
