<p id="notice"><%= notice %></p>

<h1>Employee Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Employee Line Item</th>
      <th>Employee Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_line_items.each do |employee_line_item| %>
      <tr>
        <td><%= employee_line_item.item %></td>
        <td><%= link_to 'Show', employee_line_item %></td>
        <td><%= link_to 'Edit', edit_employee_line_item_path(employee_line_item) %></td>
        <td><%= link_to 'Destroy', employee_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

