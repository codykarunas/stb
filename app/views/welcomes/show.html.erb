<%= render "layouts/navbar" %>

<section class="section">
  <div class="container center-container">

    <div class="user-notice">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <div class="welcome-message">
      <h1 class="title">Spill the Beans</h1>
    </div>

    <br />
    <% if signed_in? %>
      <%= link_to "Dashboard", dashboard_path %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <h2 class="sub-title">Sign up to order</h2><br />
      <%= link_to "View Menu", items_path, class: "button is-primary is-large" %><br /><br />
      <%= link_to "Sign in", new_user_session_path, class: "button is-primary is-large" %>
      <%= link_to "Sign up", new_user_registration_path, class: "button is-primary is-large" %> 
    <% end %>
  </div>
</section>
